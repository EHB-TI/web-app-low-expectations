

@model Categorie

<div class="categorie-card col-6 col-md-4 col-lg-3">
    <div class="card">
        <img class="card-img-top" src="@Model.Image" alt="Card image cap">
        <div class="card-body">
            <h5 class="card-title">@Model.Naam</h5>
            <p class="card-text">@Model.Omschrijving</p>
            <a asp-action="Catalogue" asp-controller="Catalogue" asp-route-categoryId="@Model.Id" class="btn btn-outline-dark">Bekijken</a>
        </div>
    </div>
</div>