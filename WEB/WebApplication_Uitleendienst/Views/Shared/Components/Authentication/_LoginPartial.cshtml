@using Microsoft.AspNetCore.Identity
@using WebApplication_Uitleendienst.Models.ViewModels

@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager
@inject RoleManager<IdentityRole> RoleManager

@model HomeViewModel

<ul class="navbar-nav d-flex align-items-center">
    @if (User.Identity.IsAuthenticated) {
    <li class="nav-item">
            <a class="nav-link btn btn-light px-2 py-1" asp-area="Account" asp-controller="Account" asp-action="Index" title="Manage">
                <i class="fa-solid fa-user"></i>
                @Model.UserInfo.Name
            </a>
    </li>
        @if (Model.UserInfo.IsAdmin) {
            <li class="nav-item">
                <a class="nav-link btn btn-dark px-2 py-1" asp-area="Admin" asp-controller="Home" asp-action="Index" title="Manage">
                    <i class="fa-solid fa-screwdriver-wrench"></i>
                </a>
            </li>
        }
        <li class="nav-item">
            @using (Html.BeginForm("Logout", "Home", new { area = "" }, FormMethod.Get)) {
                <button type="submit" class="nav-link btn btn-link text-dark">Logout</button>
            }
        </li>
    } else {
        <li class="nav-item">
            <a class="nav-link text-dark" asp-controller="home" asp-action="Login">Register</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-dark" asp-controller="home" asp-action="Login">Login</a>
        </li>
    }
</ul>
