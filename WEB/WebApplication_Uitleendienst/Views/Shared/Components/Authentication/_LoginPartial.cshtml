@using Microsoft.AspNetCore.Identity
@using WebApplication_Uitleendienst.Models.ViewModels

@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

@model HomeViewModel
<ul class="navbar-nav">
    @if (User.Identity.IsAuthenticated) {
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage"><p>Name: </p>
            @Model.UserInfo.Name
            </a>
        </li>
        <li class="nav-item">
            @using (Html.BeginForm("Logout", "Home", FormMethod.Get)) {
                <button type="submit" class="nav-link btn btn-link text-dark">Logout</button>
            }
        </li>
    } else {
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Register">Register</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-dark" asp-controller="home" asp-action="Login">Login</a>
        </li>
    }
</ul>
