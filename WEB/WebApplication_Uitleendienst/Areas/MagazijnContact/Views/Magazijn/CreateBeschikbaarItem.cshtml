@model WebApplication_Uitleendienst.Models.ViewModels.Magazijns.MagazijnViewModel

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Create</h1>

<h4>BeschikbaarItem</h4>

<div class="row">
    <div class="col-md-4">
        <form asp-action="CreatePostBeschikbaar" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="BeschikbaarItem.UitleenbaarItemId" class="control-label"></label>
                <select asp-for="BeschikbaarItem.UitleenbaarItemId">
                        <option value="@Model.Product.Id">@Model.Product.Naam - @Model.Product.Id</option>
                </select>
                <span asp-validation-for="BeschikbaarItem.UitleenbaarItemId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>Magazijn: <span class="btn btn-dark">@(Model.Magazijn.Naam)</span></label>
                <input asp-for="BeschikbaarItem.MagazijnId" hidden  value="@Model.Magazijn.Id"/>
            </div>
            <div class="form-group">
                <label asp-for="BeschikbaarItem.AantalTotaal" class="control-label"></label>
                <input asp-for="BeschikbaarItem.AantalTotaal" class="form-control" />
                <span asp-validation-for="BeschikbaarItem.AantalTotaal" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BeschikbaarItem.AantalBeschikbaar" class="control-label"></label>
                <input asp-for="BeschikbaarItem.AantalBeschikbaar" class="form-control" />
                <span asp-validation-for="BeschikbaarItem.AantalBeschikbaar" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BeschikbaarItem.AantalGereserveerd" class="control-label"></label>
                <input asp-for="BeschikbaarItem.AantalGereserveerd" class="form-control" />
                <span asp-validation-for="BeschikbaarItem.AantalGereserveerd" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

