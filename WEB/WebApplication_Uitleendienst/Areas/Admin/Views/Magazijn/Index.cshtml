

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model WebApplication_Uitleendienst.Models.ViewModels.Magazijns.MagazijnViewModel


@await Component.InvokeAsync("Message", @Model)

<div class="category-wrapper">
    <ul class="navbar-nav d-flex align-items-center float-left">
        <li>
            <a class="nav-link btn btn-dark px-2 py-1" asp-area="Admin" asp-controller="Magazijn" asp-action="Create" title="Magazijn">
                <i class="fa-solid fa-plus"></i>
                <i class="fa-solid fa-sitemap"></i>
            </a>
        </li>
    </ul>

    <table class="table table-striped">
        <thead class="thead-dark">
            <tr>
                <th scope="col">Naam</th>
                <th scope="col">Detail</th>
            </tr>
        </thead>
        <tbody>
            @if (Model.Magazijnen != null) {
                @foreach (var mag in Model.Magazijnen) {
                    <tr>
                        <td>@mag.Naam</td>
                        <td>
                            <a class="nav-link btn btn-light px-2 py-1" asp-area="Admin" asp-controller="Magazijn" asp-action="Detail" asp-route-id="@mag.Id" title="Magazijn">

                                <i class="fa-solid fa-eye"></i>
                            </a>
                        </td>
                    </tr>
                }
            }

        </tbody>
    </table>
</div>

